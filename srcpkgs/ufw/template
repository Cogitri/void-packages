# Template file for 'ufw'
pkgname=ufw
version=0.36
revision=1
noarch=yes
build_style=python3-module
pycompile_module="ufw"
conf_files="
 /etc/ufw/after.init
 /etc/ufw/after.rules
 /etc/ufw/after6.rules
 /etc/ufw/before.init
 /etc/ufw/before.rules
 /etc/ufw/before6.rules
 /etc/ufw/sysctl.conf
 /etc/ufw/ufw.conf
 /etc/ufw/user.rules
 /etc/ufw/user6.rules
 /etc/ufw/applications.d/*"
hostmakedepends="python3 iptables"
depends="$hostmakedepends"
short_desc="Uncomplicated Firewall"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="GPL-3.0-only"
homepage="https://launchpad.net/ufw"
distfiles="http://launchpad.net/ufw/${version}/${version}/+download/ufw-${version}.tar.gz"
checksum=754b22ae5edff0273460ac9f57509c3938187e0cf4fb9692c6a02833fff33cfc
patch_args="-Np1"

pre_install() {
	sed -e 's|/lib|/usr/lib|' -i setup.py
}

post_install() {
	vmkdir usr/bin
	vsv ufw
	mv ${DESTDIR}/usr/sbin/* ${DESTDIR}/usr/bin
}
