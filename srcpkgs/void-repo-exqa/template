# Template file for 'void-repo-exqa'
pkgname=void-repo-exqa
version=1
revision=1
noarch=yes
wrksrc="void-repo-exqa-${version}"
build_style=meta
short_desc="Void Linux drop-in file for the exqa (systemd) repository"
maintainer="Rasmus Thomsen <rasmus.thomsen@protonmail.com>"
license="Public Domain"
homepage="https://exqa.de"
only_for_arch="x86_64"

do_install() {
	vmkdir usr/share/xbps.d
	echo "repository=https://exqa.de" > \
		${DESTDIR}/usr/share/xbps.d/00-exqa-repository.conf
	echo "repository=https://exqa.de/debug" > \
		${DESTDIR}/usr/share/xbps.d/00-exqa-repository-debug.conf
}

void-repo-exqa-debug_package() {
	only_for_arch="x86_64"
	short_desc="${short_desc/repo/debug-repo}"
	pkg_install() {
		vmove usr/share/xbps.d/00-exqa-repository-debug.conf
	}
}
